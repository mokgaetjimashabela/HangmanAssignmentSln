<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HangmanAssignment.HangmanGamePage"
             Title="MAUI Hangman Assignment">
    <VerticalStackLayout>
        <Label Text="Welcome to Hangman" 
               HorizontalTextAlignment="Center" 
               HorizontalOptions="Center" 
               FontAttributes="Bold" 
               FontSize="40"/>
        <Image x:Name="HangmanImage" 
               Margin="40" 
               Source="hang0.png" 
               HorizontalOptions="Center"/>
        <Label x:Name="WordToGuessLabel" 
               FontAttributes="Bold" 
               FontSize="30" 
               HorizontalOptions="Center" 
               Margin="40"/>
        <Entry x:Name="GuessEntry" 
               FontSize="30" 
               HorizontalOptions="Center" 
               Margin="40" 
               Placeholder="Enter your next guess"/>
        <Button Text="Guess" 
                Clicked="OnGuessClicked"/>
        <Label x:Name="ResultLabel" 
               FontSize="30"  
               HorizontalOptions="Center" 
               Margin="10"/>
        <Button x:Name="PlayAgainButton" 
                Text="Play Again"
                Clicked="OnPlayAgainClicked" IsVisible="True"
                FontSize="30"
                Margin="10"/>
    </VerticalStackLayout>
</ContentPage>
